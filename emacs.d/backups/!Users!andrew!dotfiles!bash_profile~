LC_ALL=en_US.UTF-8
# Java vars
JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Home
#JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/1.6/Home
#JAVA_HOME=/usr/local/soylatte16-i386-1.0.3
JVM_ARG="-mx512m -Dbuild.compiler=modern -Dbuild.compiler.debug=on -Dskip_mdc=true"
JVM_ARGS="-mx512m -Dbuild.compiler=modern -Dbuild.compiler.debug=on -Dskip_mdc=true"
# Deploy scripts vars
BITS=64
HOST_NAME=cantor
#IP_ADDRESS=192.168.34.191
IP_ADDRESS=`ifconfig en0 inet | tail -1 | cut -f 2 -d ' '`
DEPLOY_HOST=$HOST_NAME
SOURCE_HOME=$HOME/source
BRANCH=lit-1022
SCRIPTS_HOME=$SOURCE_HOME/$BRANCH/atypon/automation/deploy

PATH=$SCRIPTS_HOME:$JAVA_HOME/bin:$PATH:$HOME/bin:/usr/local/bin

# Source atypon definitions
. $SCRIPTS_HOME/functions.sh
. $SCRIPTS_HOME/aliases.sh
unalias ls

if [ -f $HOME/.alias.custom ]; then
   . $HOME/.alias.custom
fi

if [ -f $HOME/.atyponrc ]; then
   . $HOME/.atyponrc
fi

# Source global definitions
if [ -f /etc/bashrc ]; then
   . /etc/bashrc
fi

DYLD_LIBRARY_PATH=${DEPLOY_HOME}/webapps/${PRODUCT_NAME}/pdfplus:${DYLD_LIBRARY_PATH}
export DYLD_LIBRARY_PATH

export LC_ALL PATH CVSROOT JAVA_HOME JVM_ARG JVM_ARGS SCRIPTS_HOME HOST_NAME IP_ADDRESS BITS SOURCE_HOME DEPLOY_HOST

WRAPPER_CMD="$ATYPON_HOME/zips/wrapper/libMac/wrapper"
WRAPPER_CONF="$SCRIPTS_HOME/conf/backstage.wrappermac.conf"
INIT_MEM=400
MAX_MEM=1500
export WRAPPER_CMD WRAPPER_CONF INIT_MEM MAX_MEM
export PATH=${HOME}/apps/bin:$PATH

export JRUBY_HOME=$HOME/Developer/lib/jruby-1.1.5
export JRUBY_BIN=$JRUBY_HOME/bin
export PATH=$PATH:$JRUBY_BIN

# Shell Color
CLICOLOR="YES"; export CLICOLOR
# Magenta directories
#LSCOLORS="fxgxcxdxbxegedabagacad"
# Green and Gold
LSCOLORS="dxfxcxdxbxegedabagacad"
export LSCOLORS

#export PS1='\[\e[0;36m\][\u@\h \W]\$\[\e[0m\] '
export export PS1='\[\e[0;36m\][\h:\W]\$\[\e[0m\] '

# lesspipe-1.55
LESSOPEN="|/usr/local/bin/lesspipe.sh %s"; export LESSOPEN

# Terminal Window Title
export PROMPT_COMMAND='echo -ne "\033]0;${USER}@${HOSTNAME%%.*}: ${PWD/#$HOME/~}\007"'

# Default options for the zip command
# zip ZIPOPTS archive.zip source
ZIPOPT="-rug"; export ZIPOPT