alias chmod="/bin/chmod"
alias dock2d="defaults write com.apple.dock no-glass -boolean YES; killall Dock"
alias dock3d="defaults write com.apple.dock no-glass -boolean NO; killall Dock"
alias emacsx="open -a Emacs.app"
alias em="emacsclient -nw"
alias mate="open -a TextMate.app"
alias reload_textmate_bundles="osascript -e 'tell app \"TextMate\" to reload bundles'"

# alternative to "rails" command to use templates
# Grabbed from ryanb's dotfiles
#  http://github.com/ryanb/dotfiles/tree/master
# 
# $ railsapp simple_haml_git mynewapp
function railsapp {
  template=$1
  appname=$2
  shift 2
  rails $appname -m $RAILS_TEMPLATES/$template.rb $@
}

function torquebox {
  export TORQUEBOX_HOME=/usr/local/torquebox/current
  export JBOSS_HOME=$TORQUEBOX_HOME/jboss
  export JRUBY_HOME=$TORQUEBOX_HOME/jruby
  export PATH=$JRUBY_HOME/bin:$PATH
}
